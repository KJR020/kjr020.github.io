---
import { getCollection } from "astro:content";
import PostCard from "@/components/PostCard.astro";
import BaseLayout from "@/layouts/BaseLayout.astro";

const posts = await getCollection("posts", ({ data }) => !data.draft);
const sortedPosts = posts.sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime(),
);

const postsByYear = sortedPosts.reduce<Record<number, typeof sortedPosts>>((acc, post) => {
  const year = new Date(post.data.date).getFullYear();
  if (!acc[year]) acc[year] = [];
  acc[year].push(post);
  return acc;
}, {});
const years = Object.keys(postsByYear)
  .map(Number)
  .sort((a, b) => b - a);
---

<BaseLayout title="Archive - KJR020's Blog" description="すべての記事一覧">
  <div class="archive-page">
    <div class="archive-header container mx-auto px-4 pt-phi-2xl pb-phi-md">
      <h1
        class="font-bold font-heading tracking-tight mb-phi-2xs"
        style="font-size: var(--font-size-title1); line-height: var(--lh-tight);"
      >
        Archive
      </h1>
      <p class="text-muted-foreground">ブログ記事一覧です。</p>
    </div>

    <div class="archive-body">
      <div class="archive-scroll">
        <div class="container mx-auto px-4 pb-4">
          {
            years.map((year) => (
              <section class="year-section">
                <div class="year-label">
                  <span class="year-text">{year}</span>
                </div>
                <div class="year-cards">
                  {postsByYear[year].map((post) => (
                    <PostCard post={post} />
                  ))}
                </div>
              </section>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .archive-page {
    position: relative;
    display: flex;
    flex-direction: column;
    flex: 1;
    min-height: 0;
    overflow: hidden;
  }

  .archive-header {
    flex-shrink: 0;
  }

  .archive-body {
    position: relative;
    flex: 1;
    min-height: 0;
  }

  .archive-scroll {
    position: relative;
    z-index: 1;
    height: 100%;
    overflow-y: auto;
  }

  .year-section {
    display: grid;
    grid-template-columns: 5rem 1fr;
    gap: 1.618rem; /* φ */
    margin-bottom: 1.618rem; /* φ */
  }

  .year-label {
    position: sticky;
    top: 0;
    align-self: start;
    padding-top: 0.618rem; /* 1/φ */
  }

  .year-text {
    font-size: var(--font-size-title3); /* √φ = 1.272rem */
    font-weight: 700;
    color: hsl(var(--muted-foreground));
  }

  .year-cards {
    display: grid;
    gap: 0.618rem; /* 1/φ */
  }

  :global([data-slot="card"]:hover) {
    background: hsl(var(--accent) / 0.5);
  }

  @media (max-width: 768px) {
    .year-section {
      grid-template-columns: 3.5rem 1fr;
      gap: 0.618rem; /* 1/φ */
    }

    .year-text {
      font-size: var(--font-size-small); /* 1/⁴√φ = 0.886rem */
    }
  }
</style>

<style is:global>
  body:has(.archive-page) {
    height: 100vh;
    overflow: hidden;
  }

  body:has(.archive-page) > main {
    display: flex;
    flex-direction: column;
    flex: 1;
    min-height: 0;
  }
</style>
